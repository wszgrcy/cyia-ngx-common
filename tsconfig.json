    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "cyia-ngx-common": [
        // "dist/cyia-ngx-common",
        "./lib/src"
      ],
      "cyia-ngx-common/*": [
        // "dist/cyia-ngx-common/*",
        "lib/src/*" //调试调用
      ]
      // "lib/*": [
      //   "dist/lib/*"
      // ]
    }
  }
}
