{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "./",
    "declarationMap": true,
    "outDir": "../out-tsc/lib",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": [],
    "lib": ["dom", "es2015", "esnext"],
    "paths": {
      "@cyia/ngx-common/loading-hint": ["./src/loading-hint"],
      "@cyia/ngx-common/repository": ["./src/repository"],
      "@cyia/ngx-common/util": ["./src/util"],
      "@cyia/ngx-common/monaco-textmate": ["./src/monaco-textmate"]
    }
  },

  "exclude": ["src/test.ts", "**/*.spec.ts"],
  "files": ["./src/index.ts"],
  "include": []
}
